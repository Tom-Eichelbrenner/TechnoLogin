{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        <div class="columns is-flex is-justify-content-center is-flex-direction-column is-align-items-center">
            <h1 class="title pt-5">S'inscrire</h1>
            <div class="column is-half ">
                {{ form_start(registrationForm) }}
                <div class="field">
                    {{ form_label(registrationForm.username) }}
                    <div class="control">
                        {{ form_widget(registrationForm.username) }}
                    </div>
                    <div class="form-error">
                        {{ form_errors(registrationForm.username) }}
                    </div>
                </div>
                <div class="field">
                    {{ form_label(registrationForm.plainPassword.password) }}
                    <div class="control">
                        {{ form_widget(registrationForm.plainPassword.password) }}
                    </div>
                    {% if registrationForm.plainPassword.password.vars['errors']|length > 0 %}
                    {% for error in registrationForm.plainPassword.password.vars['errors'] %}
                    <p class="help is-danger">
                        {{ error.message }}
                    </p>
                    {% endfor %}
                    {% endif %}
                </div>
                <div class="field">
                    {{ form_label(registrationForm.plainPassword.confirm) }}
                    <div class="control">
                        {{ form_widget(registrationForm.plainPassword.confirm) }}
                    </div>
                    {% if registrationForm.plainPassword.confirm.vars['errors']|length > 0 %}
                    {% for error in registrationForm.plainPassword.confirm.vars['errors'] %}
                    <p class="help is-danger">
                        {{ error.message }}
                    </p>
                    {% endfor %}
                    {% endif %}
                </div>
                <div class="control is-flex is-justify-content-center">
                    <button type="submit" class="button is-primary is-medium">S'enregistrer</button>
                </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
