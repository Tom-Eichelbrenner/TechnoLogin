{% extends 'base.html.twig' %}

{% block title %}{{article.title}}{% endblock %}

{% block body %}
<div class="container">
    <h1 class="title">{{article.title}}</h1>
    <hr>
    <p class="content">{{article.content|raw}}</p>

    <h2 class="comment-title mt-5">
        <span id="comment-count">{{article.comments|length}} </span>{% if article.comments|length <= 1 %} commentaire{% else %}commentaires{% endif %}
    </h2>
    <hr>
    <div class="comment-area mb-5">
        {{ form(comment_form, {'attr': {'class':'comment-form'}}) }}
    </div>
    <div id="comment-list">
        {% for comment in article.comments %}
        {% include 'comment/index.html.twig' with [comment] %}
        {% endfor %}
    </div>
</div>
{% endblock %}
