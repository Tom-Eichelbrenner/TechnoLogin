{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
    <section class="hero is-small py-5">
        <div class="hero-body">
            <div class="container has-text-centered">
                <h1 class="font-1 title-color title">
                    {{ article.title }}
                </h1>
{#                <h3>#}
{#                    {% for category in article.categories %}#}
{#                        {% if loop.first %}#}
{#                            <a href="{{path('category_show', {'slug': category.slug})}}">{{ category.name }}</a>#}
{#                        {% else %}#}
{#                           - <a href="{{path('category_show', {'slug': category.slug})}}">{{ category.name }}</a>#}
{#                        {% endif %}#}
{#                    {% endfor %}#}
{#                </h3>#}
            </div>
        </div>
    </section>
    <div class="mx-5 mt-5">
        <div class="container post-single p-5 box" style="background-color: transparent">
            <article class="content">
                {{ article.content|raw }}
            </article>
        </div>
        <div class="container p-5 box comment-section">
            <h2 class="comment-title mt-3">
                <span id="comment-count">{{ article.comments|length }} </span>{% if article.comments|length <= 1 %} commentaire{% else %}commentaires{% endif %}
            </h2>
            <hr>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <div class="comment-area mb-3">
                    {{ form_start(comment_form, {'attr': {'class':'comment-form field'}}) }}
                    {{ form_label(comment_form.content) }}
                    <div class="control pt-3">
                        {{ form_widget(comment_form.content) }}
                    </div>
                    <div class="field is-grouped py-3 is-flex is-justify-content-end is-align-content-end">
                        <div class="control">
                            {{ form_widget(comment_form.send) }}
                        </div>
                    </div>


                    {{ form_end(comment_form) }}
                </div>
            {% else %}
                <article class="message is-warning">
                    <div class="message-body">
                        <p class="">
                            Vous devez être connecté pour pouvoir poster un commentaire. <a href="{{ path('app_login') }}">Connectez-vous</a>
                        </p>

                    </div>
                </article>
            {% endif %}
            <div id="comment-list">
                {% for comment in comments %}
                    {% include 'comment/index.html.twig' with [comment] %}
                {% endfor %}
                <div class="container is-flex is-justify-content-center">
                    {{ knp_pagination_render(comments) }}
                </div>
            </div>
        </div>

    </div>
{% endblock %}
