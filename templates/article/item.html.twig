<article class="mb-5">
    <div class="row">
        {% if article.featuredImage %}
            <div class="col-md-5">
                <a href="{{ path('article_show', {'slug':article.slug}) }}">
                    <img src="/uploads/images/{{ article.featuredImage.filename }}"
                         alt="{{ article.featuredImage.altText }}" loading="lazy" class="img-fluid">
                </a>
            </div>
        {% endif %}

        <div class="col-md-7">
            <h2>
                <a href="{{ path('article_show', {'slug':article.slug}) }}" class="text-decoration-none">
                    {{ article.title }}
                </a>
            </h2>
            <p>
                {{ article.createdAt|date('d M Y') }}
            </p>
            <p>{{ article.featuredText ?: article.content|striptags|slice(0, 130) ~ '...' }}</p>

        </div>
    </div>
</article>