<article class="columns is-multiline">
    <div class="column is-12 post-img">
        <figure>
            <img src="/uploads/{{ article.featuredImage.filename }}" alt="{{ article.featuredImage.altText }}">
        </figure>
    </div>
    <div class="column is-12 featured-content">
        <h1 class="title post-title font-1 article_title_color">
            {{ article.title }}
        </h1>
        <p class="post-excerpt">
            {{ article.featuredText ?: article.content|striptags|slice(0, 130) ~ '...' }}
        </p>
        <br>
        <a href="{{ path('article_show', {'slug':article.slug}) }}" class="button is-primary">
            Lire la suite
        </a>
    </div>
</article>